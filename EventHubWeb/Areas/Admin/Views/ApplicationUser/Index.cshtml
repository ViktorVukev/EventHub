@model List<ApplicationUser>

<div class="container">
    <div class="spacer"></div>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Потребители</h1>
        </div>
        <div>
            <a asp-controller="ApplicationUser" asp-action="Create" class="btn btn-primary" style="background-color: #94c045; border: #94c045;">
                <i class="bi bi-plus-circle"></i> Добави
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Име
                </th>
                <th>
                    Фамилия
                </th>
                <th>
                    Email
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ApplicationUser" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary mx-2" style="background-color: #94c045; border: #94c045;">
                                <i class="bi bi-pencil-square"></i> Редактирай
                            </a>
                            <a asp-controller="ApplicationUser" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Изтрий
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>