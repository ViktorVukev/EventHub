@model ApplicationUser

<div class="container">
    <div class="spacer"></div>

    <h1>Редактирай потребител</h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="userFirstName" class="form-label mt-4">Име</label>
            <input asp-for="FirstName" type="text" class="form-control" id="userFirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userLastName" class="form-label mt-4">Фамилия</label>
            <input asp-for="LastName" type="text" class="form-control" id="userLastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userEmail" class="form-label mt-4">Имейл</label>
            <input asp-for="Email" type="email" class="form-control" id="userEmail">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="newPassword" class="form-label mt-4">Парола</label>
            <input asp-for="PasswordHash" type="password" name="newPassword" class="form-control" id="userPassword">
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="confirmPassword" class="form-label mt-4">Потвърди парола</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword">
        </div>

        <div class="spacer"></div>
        <button type="submit" class="btn btn-primary" style="background-color: #94c045; border: #94c045;">Редактирай</button>
        <a asp-controller="ApplicationUser" asp-action="Index" class="btn btn-secondary">Обратно към потребителите</a>
        <div class="spacer"></div>

    </form>

</div>
