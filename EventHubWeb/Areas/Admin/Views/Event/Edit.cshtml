@model Event
<div class="container">

    <div class="spacer"></div>
    <h1>Редактирай събитие</h1>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col-10">
                <div class="form-group">
                    <label for="eventName" class="form-label mt-4">Име на събитието</label>
                    <input asp-for="Name" type="text" class="form-control" id="eventName">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="eventPlace" class="form-label mt-4">Място на провеждане</label>
                    <input asp-for="Place" type="text" class="form-control" id="eventPlace">
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="categoryDescription" class="form-label mt-4">Описание на събитието</label>
                    <textarea asp-for="Description" type="text" class="form-control" id="categoryDescription"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="eventCategory" class="form-label mt-4">Категория</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" type="number" class="form-select" id="eventCategory">
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="eventPrice" class="form-label mt-4">Цена</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" id="eventPrice">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="eventDateAndTime" class="form-label mt-4">Дата на провеждане</label>
                    <input asp-for="DateAndTime" type="datetime-local" class="form-control" id="eventDateAndTime">
                    <span asp-validation-for="DateAndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="eventImageUrl" class="form-label mt-4">Снимка</label>
                    <input asp-for="ImageUrl" type="file" name="file" value="@ViewBag.ImageUrl" class="form-control" id="eventImageUrl">
                </div>
            </div>
            <div class="col-2">
                <img src="@ViewBag.ImageUrl" width="100%"
                     style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>

        <div class="spacer"></div>
        <button type="submit" class="btn btn-primary" style="background-color: #94c045; border: #94c045;">Редактирай</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Обратно към събитията</a>
        <div class="spacer"></div>

    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}