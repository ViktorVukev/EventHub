@model List<Event>

<div class="container">
    <div class="spacer"></div>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Събития</h1>
        </div>
        <div>
            <a asp-controller="Event" asp-action="Create" class="btn btn-primary" style="background-color: #94c045; border: #94c045;">
                <i class="bi bi-plus-circle"></i> Добави
            </a>
        </div>
    </div>

    <table id="eventsData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Име
                </th>
                <th>
                    Място
                </th>
                <th>
                    Описание
                </th>
                <th>
                    Категория
                </th>
                <th>
                    Цена
                </th>
                <th>
                    Дата и час
                </th>
                <th>Действия</th>
        </thead>
    </table>
</div>


@section Scripts{
    <script src="~/js/event.js"></script>
}